{
  "title": "logrotate",
  "description": "Log Rotate",
  "memory_usage": {
    "required": 32,
    "recommended": 48
  },
  "licenses": [
  ],
  "binding_anchor": [
    {
      "variables": {
        "action_type": "start",
        "cron_job": "every_6_hrs",
        "title": "start",
        "when": "5 */6 * *"
      }
    }
  ],
  "stages": [
    {
      "starter": {
        "image": "engines/servicebase",
        "tag": "current"
      },
      "state": {
        "type_path": "logrotate",
        "service_handle_field": "log_file_path",
        "deployment_type": "worker",
        "default_stop_timeout": 0,
        "restart_attempts": 0,
        "run_as_user": "logrotate",
        "user_primary_group": "logrotate",
        "create_user": "1"
      },
      "disposition": [
        "soft_service"
      ],
      "schedules": [
        {
          "label": "rotate_schedule",
          "timespec": {
            "minute": 5,
            "hour": 0,
            "day_of_month": 0,
            "month": 0,
            "day_of_week": 0
          },
          "instruction": "start"
        }
      ]
    }
  ]
}
